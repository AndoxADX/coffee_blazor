@page "/components/basicTable"

<h1>HCB.Internal.Web.RCL.BasicTable</h1>


@if (books is not null)
{
    <HCB.Internal.Web.RCL.BasicTable lists="books" TItem="Book"></HCB.Internal.Web.RCL.BasicTable>
}

@code{
    List<Book> books =  new List<Book>() {
        new Book() { title = "Title 1", description = "UTC Date", date = DateTime.UtcNow},
        new Book() { title = "Title 2", description = "Current Date", date = DateTime.Now},
    };

    public class Book
    {
        public string title { get; set; }
        public string description { get; set; }
        public DateTimeOffset date { get; set; }
    }
}